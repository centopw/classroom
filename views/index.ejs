<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
    <script>
        function filterCountry() {
            var select = document.getElementById("countryFilter");
            var selectedCountry = select.options[select.selectedIndex].value;
            var rows = document.querySelectorAll("tbody tr");
            rows.forEach(row => {
                var country = row.querySelector("td:nth-child(3)").textContent;
                if (selectedCountry === "" || country === selectedCountry) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }
    </script>
</head>

<body class="bg-gray-200 flex items-center justify-center h-screen">
    <div class="bg-white p-10 rounded-lg shadow-md w-2/3">
        <h2 class="text-3xl mb-6 text-center font-bold text-gray-700">User List</h2>
        <div class="bg-white p-10 rounded-lg shadow-md w-2/3">
            <h2 class="text-3xl mb-6 text-center font-bold text-gray-700">User List</h2>
            <div class="mb-6">
                <label for="countryFilter" class="block text-gray-700 text-sm font-bold mb-2">Filter by country:</label>
                <select id="countryFilter" onchange="filterCountry()"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    <option value="">All countries</option>
                    <option value="">Vietnam</option>
                </select>
            </div>
            <table class="table-auto w-full">
                <thead>
                    <tr>
                        <th class="px-4 py-2 text-white bg-gray-700 font-semibold border">Name</th>
                        <th class="px-4 py-2 text-white bg-gray-700 font-semibold border">Address</th>
                        <th class="px-4 py-2 text-white bg-gray-700 font-semibold border">Country</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index)=> { %>
                        <tr class="<%= index % 2 === 0 ? 'bg-gray-100' : '' %>">
                            <td class="border px-4 py-2 text-gray-700">
                                <%= user.name %>
                            </td>
                            <td class="border px-4 py-2 text-gray-700">
                                <%= user.address %>
                            </td>
                            <td class="border px-4 py-2 text-gray-700">
                                <%= user.country %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
        </table>
    </div>
</body>

</html>